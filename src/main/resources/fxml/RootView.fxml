<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onOpenAction" text="Abrir...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#onSaveAction" text="Guardar">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                        <MenuItem mnemonicParsing="false" text="Nuevo">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Suprimir" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Socorro">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Acerca de..." />
                  </items>
                </Menu>
              </menus>
               <padding>
                  <Insets top="2.0" />
               </padding>
            </MenuBar>
            <HBox fillHeight="false" prefHeight="10.0" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onNewAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-file" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Nuevo archivo" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onOpenAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-folder-open" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Abrir archivo" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onSaveAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-save" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Guardar archivo" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onCloseAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-window-close" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Cerrar pestaña" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onCloseAllAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Cerrar todas las pestañas" />
                     </tooltip></Button>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Button mnemonicParsing="false" onAction="#onCopyAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-copy" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Copiar selección" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onCutAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-cut" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Cortar selección" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onPasteAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-paste" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Pegar selección" />
                     </tooltip></Button>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <Button mnemonicParsing="false" onAction="#onUndoAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-undo-alt" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Deshacer acción" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#onRedoAction">
                     <graphic>
                        <FontIcon iconLiteral="fas-redo-alt" iconSize="20" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="Rehacer acción" />
                     </tooltip></Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="editTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Untitled Tab 1">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
